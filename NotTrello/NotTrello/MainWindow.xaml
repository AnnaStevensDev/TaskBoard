<Window x:Name="Board" x:Class="NotTrello.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotTrello"
        mc:Ignorable="d"
        Title="NotTrello" Height="1080" Width="1920"
        WindowState = "Maximized"
        WindowStyle= "None">
    <Window.Background>
        <LinearGradientBrush StartPoint="1,0" EndPoint="1,1">
            <GradientStop Color="#FF144A4A" Offset="0.0" />
            <GradientStop Color="#FF161A4D" Offset="0.25" />
        </LinearGradientBrush>
    </Window.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="142"/>
            <RowDefinition Height="938"/>
        </Grid.RowDefinitions>
        <Border  CornerRadius= "20"  Background="#FF02131F"  HorizontalAlignment="Center" VerticalAlignment="Center" Width="600"  Opacity=".85">
            <TextBlock x:Name="BoardName" 
                   TextWrapping="Wrap" 
                   VerticalAlignment="Top" 
                   HorizontalAlignment="Center"
                   FontSize="40"
                   Foreground="LimeGreen"
                   TextAlignment="Center"
                   Padding="10,10,10,10" 
                   FontFamily="Arial Rounded MT Bold">
                [BOARD NAME]
            </TextBlock>
        </Border>
        <Grid x:Name="MainGrid" Height="938" VerticalAlignment="Top" Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.Background>
                <LinearGradientBrush StartPoint="1,0" EndPoint="1,1">
                    <GradientStop Color="#35E6EF" Offset="0.0" />
                    <GradientStop Color="#002060" Offset="0.85" />
                </LinearGradientBrush>
            </Grid.Background>

            <Border CornerRadius= "10" Margin= "20,40,20,50" Grid.Column="0" Opacity=".90">
                <Border.Background>
                    <LinearGradientBrush StartPoint="1,0" EndPoint="1,1">
                        <GradientStop Color="#FF041F18" Offset="0.0" />
                        <GradientStop Color="#FF06121C" Offset="0.85" />
                    </LinearGradientBrush>
                </Border.Background>
                <TextBlock 
                HorizontalAlignment="Center"
                Margin="0,10,0,0"
                TextWrapping="Wrap"
                Text="[Lane Name]"
                VerticalAlignment="Top"
                FontSize="30"
                Foreground="LimeGreen"
                TextAlignment="Center"
                Padding="10,0,10,10" 
                FontFamily="Arial Rounded MT Bold">

                </TextBlock>
            </Border>
            <Border CornerRadius= "10" Margin= "20,40,20,50" Grid.Column="1" Opacity=".90">

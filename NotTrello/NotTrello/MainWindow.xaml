                <LinearGradientBrush StartPoint="1,0" EndPoint="1,1">
                    <GradientStop Color="#FF041F18" Offset="0.0" />
                    <GradientStop Color="#FF06121C" Offset="0.85" />
                </LinearGradientBrush>
            </Border.Background>
            <StackPanel>

            </StackPanel>
        </Border>
